{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "ESNext",
    "lib": ["ES2021", "DOM.Iterable", "DOM", "ES2021.Weakref"],
    "allowJs": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["jest"],
    "jsx": "react-jsx"
  },
  "include": [
    "src",
    "node_modules/dayjs/plugin/utc.d.ts",
    "node_modules/@reserve-protocol/token-zapper/types/index.d.ts",
    "node_modules/theme-ui/dist/theme-ui.cjs.d.ts"
  ]
}
